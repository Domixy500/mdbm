{
    "compilerOptions": {
        // Environment
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2015",
        "module": "esnext",
        "moduleResolution": "bundler",
        "importHelpers": false,
        
        // Coding rules
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src"]
}